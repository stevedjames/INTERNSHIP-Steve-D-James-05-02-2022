<% for(var i = 0; i < data.length; i++) { %>
    <tr>
        <td><%= i + 1 %></td>
        <td><%= data[i].standard %></td>
        <td><%= data[i].division %></td>
        <td><a href="view-students/<%= data[i]._id %>">View students</a></td>
        <td>
            <a href="/update-class/<%= data[i]._id%>" class="btn border-shadow update">
                <span class="text-gradient"><i class="fas fa-pencil-alt"></i></span>
            </a>
            <a class="btn border-shadow delete" href="/delete-class/<%= data[i]._id%>">
                <span class="text-gradient"><i class="fas fa-times"></i></span>
            </a>
        </td>
    </tr>
    <% } %>