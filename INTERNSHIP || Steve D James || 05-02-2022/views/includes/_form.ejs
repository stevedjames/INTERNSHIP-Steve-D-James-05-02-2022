        <div class="form-group">
            <label for="standard" class="text-light">Standard </label>
            <input type="Number" name="standard" value="" placeholder="Standard" >
        </div>
        <div class="form-group">
            <label for="division" class="text-light">Division </label>
            <input type="search"  name="division" value="" placeholder="Division" >
