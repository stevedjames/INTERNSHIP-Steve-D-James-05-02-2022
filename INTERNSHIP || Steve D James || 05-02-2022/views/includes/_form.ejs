 <!-- form handling -->
 <form action="/add-student" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Mark Adreis">
        </div>
        <div class="form-group">
            <label for="roll" class="text-light">Roll No: </label>
            <input type="number" name="roll" value="" placeholder="Enter your roll number">
        </div>
        <div class="form-group">
            <label for="mobile" class="text-light">Phone No: </label>
            <input type="text" name="mobile" value="" placeholder="Enter your phone number">
