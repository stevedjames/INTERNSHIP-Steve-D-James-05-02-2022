  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> All Users</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update student</h2>
            <span class="text-light">Use the below form to Update a student data</span>
        </div>

        <!-- add user form -->
         <!-- form handling -->
 <form method="POST" action="/update/<%=data._id%>" >
    <div class="new_user">
         <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="<%= data._id %>">
            <input type="text" name="name" value="<%= data.name %>" placeholder="Mark Adreis">
        </div>
        <div class="form-group">
            <label for="roll" class="text-light">Roll No: </label>
            <input type="number" name="roll" value="<%= data.roll %>" placeholder="Enter your roll number">
        </div>
        <div class="form-group">
            <label for="mobile" class="text-light">Phone No: </label>
            <input type="text" name="mobile" value="<%= data.mobile %>" placeholder="Enter your phone number">
            <!-- <input type="text" name="mobile" value="" placeholder="Enter your phone number" title="Should Contain 10 digits" pattern="/^(0|[+91]{3})?([7-9][0-9]{9})$/"> -->
        </div>
        <div class="form-group">
            <label for="standard" class="text-light">Standard </label>
            <input type="Number" name="standard" value="<%= data.standard %>" placeholder="Standard" >
        </div>
        <div class="form-group">
            <label for="division" class="text-light">Division </label>
            <input type="text" name="division" value="<%= data.division %>" placeholder="Division" >
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
       
    </div>
</main>
